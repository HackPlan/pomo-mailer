extend base

block body
  body(itemscope='', itemtype='http://schema.org/EmailMessage', style="#{basic14} -webkit-font-smoothing: antialiased; -webkit-text-size-adjust: none; width: 100% !important; height: 100%; line-height: 1.6; background: #f6f6f6; margin: 0;")
    table.body-wrap(style="#{basic14} width: 100%; background: #f6f6f6; margin: 0;")
      tr(style=basic14Margin0)
        td(style="#{basic14} vertical-align: top; margin: 0;", valign='top')
        td.container(width='600', style="#{basic14} vertical-align: top; display: block !important; max-width: 600px !important; clear: both !important; margin: 0 auto;", valign='top')
          .content(style="#{basic14} max-width: 600px; display: block; margin: 0 auto; padding: 20px;")
            table.main(width='100%', cellpadding='0', cellspacing='0', style="#{basic14} border-radius: 3px; background: #fff; margin: 0; border: 1px solid #e9e9e9;")
              tr(style=basic14Margin0)
                td.alert.alert-warning(style="#{basic16} vertical-align: top; color: #fff; font-weight: 500; text-align: center; border-radius: 3px 3px 0 0; background: #FF9F00; margin: 0; padding: 20px;", align='center', valign='top')= alert
              tr(style=basic14Margin0)
                td.content-wrap(style="#{basic14} vertical-align: top; margin: 0; padding: 20px;", valign='top')
                  table(width='100%', cellpadding='0', cellspacing='0', style=basic14Margin0)
                    tr(style=basic14Margin0)
                      td.content-block(style=contentBlock, valign='top')= title
                    tr(style=basic14Margin0)
                      td.content-block(style=contentBlock, valign='top')= detail
                    tr(style=basic14Margin0)
                      td.content-block(style=contentBlock, valign='top')
                        a.btn-primary(href=link, style="#{basic14} color: #FFF; text-decoration: none; line-height: 2; font-weight: bold; text-align: center; cursor: pointer; display: inline-block; border-radius: 5px; text-transform: capitalize; background: #348eda; margin: 0; border-color: #348eda; border-style: solid; border-width: 10px 20px;")= action
                    tr(style=basic14Margin0)
                      td.content-block(style=contentBlock valign='top')= copyright
            .footer(style="#{basic14} width: 100%; clear: both; color: #999; margin: 0; padding: 20px;")
              table(width='100%', style=basic14Margin0)
                tr(style=basic14Margin0)
                  td.aligncenter.content-block(style="#{basic12} vertical-align: top; text-align: center; margin: 0; padding: 0 0 20px;", align='center', valign='top')
                    | #{unsubscribe.before}
                    a(href=unsubscribe.link, style="#{basic12} color: #999; text-decoration: underline; margin: 0;")= unsubscribe.action
                    |  #{unsubscribe.after}
        td(style="#{basic14} vertical-align: top; margin: 0;", valign='top')
